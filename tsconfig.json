{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "rootDir": ".",
    "outDir": "dist",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
